.sendbutton {background:url(../Images/btn_Send.jpg) ;width:138px;height:40px; margin:0px 0 0 0; border-right: 0px; border-top: 0px; border-left: 0px; border-bottom: 0px;}
.continuebutton {background:url(../Images/Continue_Button.png) ;width:175px;height:55px; margin:0px 0 0 0; border-right: 0px; border-top: 0px; border-left: 0px; border-bottom: 0px;}

