/* General CSS */



body {background:url(../Images/pagebg.jpg) repeat-x #fff;width:100%; height:835px}
/*p { color: #2E2E2E; font-family: arial; font-size:12px; padding: 1px 2px 1px 5px;  }*/
p { color: #2E2E2E; font-family: arial; font-size:12px; padding: 0px 21px 0px 21px; }

.pagehead	  { font-family: Garamond ,Helvatica, Arial, MS Sans Serif, Verdana; font-size: 30pt; font-weight:100; color: #E41B23;margin:5 0 0 0;}
.sml	      { font-family: MS Sans Serif,Verdana, Arial, Helvatica; font-size: 8pt; color: #000000;}
.star		  { color:#FF0000;}
.footertxt    { font-family: Arial, Verdana,sans-serif; color: #ffffff;font-size:9pt;margin:0 0 0px 0px;}

.footertxt a:hover,a:active,a:visited
{
   text-decoration:underline;
}

.footercopyrights { font-family: Arial, Verdana,sans-serif; color: #ffffff;font-size:9pt;margin:0 0 4px 0px}

.footercopyrights a:hover,a:active,a:visited
{
 text-decoration:underline;
 border:0;
}

.footercopyrights a:link,a:visited
{
 text-decoration:underline;
 border:0;
}

/* header */
.headerhead	  { font-family: Helvatica, Arial, MS Sans Serif, Verdana; font-size: 10pt; font-weight:bold; }
.headerdetails	{ font-family: Helvatica, Arial, MS Sans Serif, Verdana; font-size: 10pt;  }
.headerborder	{ border-right: #AACADA 1px solid;border-top: #AACADA 1px solid;border-left: #AACADA 1px solid;border-bottom: #AACADA 1px solid; background-color:#C6DEEA; height:70px }
.headerdetailshead	{ font-family: Helvatica, Arial, MS Sans Serif, Verdana; font-size: 10pt; font-weight:bold;color:#93200A }
.clickhere	{	font-family: Helvatica, Arial, MS Sans Serif, Verdana; font-size: 10pt;	color:#757575}

#logoffbg { font-family: Verdana,Arial,sans-serif ;font-size: 13.3333px; font-weight: 400; font-style: normal;  color: #666666 }

#logo{background:url(../Images/Logo.jpg) no-repeat top; width:164px;height:83px;margin:0 0 0 203px;padding:0;text-indent:1003px;}

#container {float:left; margin-left: 0px; margin-right: 0px; width: 1010px;}

#header { float:left;width: 1004px; height: 129px; background:url(../Images/topbar.jpg) no-repeat; }


#leftsidebar { float: left;  width: 200px;  height: 540px; }


#body_part{float:left; width:803px; height:300px; margin:0 0 0 0px;background:#000;}

#main_bg { float:left; margin:0; background:url(../Images/menu_bg_2.jpg) repeat-y; width: 804px;}

#main { float: left; width: 770px; font-family: Verdana, Arial, sans-serif; color: #000000;font-size: 10pt; background: #ffffff; padding: 0px; margin:0; }

#main_second_bg {float:left; margin:0 0 0 0px; width:804px; background:url(../Images/menu_bg.jpg) repeat-x; }

#bottom_border{float:left;background:url(../Images/bottombar.png) no-repeat; width:803px; height:71px;margin:0;padding-top:15px; }


/* footer */
#footer {float:left; width: 1010px; margin:0 0 0 20px; height: 35px;  }


#footerbar { float: left; width: 803px; height: 70px; background-color: #989EAE; margin:0 0 0 0px; padding: 15px; }
#footer_solartis{float: left; width: 799px; height: 31px; background-color: #ffffff;background:url(../Images/Poweredby.gif) no-repeat 0 0; }

#footer_solartis p
{
   font-family: Arial, MS Sans Serif, Verdana; font-size: 8pt;	color:#757575; margin-top:5px;
}


/* Form and Formfields */
.frameEmpCenborder{width:675px; height:120px; margin:10px 15px 5px 42px; background:#fff;border:1px #d2d2d2 solid; }
.field{clear:both;margin:6px 0 3px 10px;font-size:12px;text-align:left;font-weight:normal;}

.field p
{
   margin:0px;
   padding:0px;
   text-align:left;
   float:left;
   font-family: Verdana, Arial, sans-serif; 
   color: #000000;
   font-size: 10pt; 
   font-size:12px;
}
.headerfield{clear:both;margin:6px 0 3px 10px;font-size:13px;text-align:left;font-weight:bold; color: #666666; font-family: Verdana;}



